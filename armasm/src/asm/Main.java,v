@package asm;

import java.io.File;
import java.util.Hashtable;

public class Main {
    
    public static void main(String [] args) {
        
        if ( args.length < 1 ) {
            usage();
            System.exit(0);
        }
        int idx = 0;
        for (;idx < args.length - 1;idx++) {
            //System.out.println(args[idx]);
            if (!args[idx].startsWith("-")) {
                usage();
                System.exit(0);
            }
            if (args[idx].equals("-v")){
                Assembler.setVerbose(true);
            } else {
                usage();
                System.exit(0);
            }
        }
        try {
            File file = new File(args[idx]);
            Assembler as = new Assembler(file);
            as.assemble();
        } catch(Exception e) {
            System.out.println(e);
        }
    }
    
    public static void usage() {
        System.out.println("usage: asm <filename>");
    }
}@
